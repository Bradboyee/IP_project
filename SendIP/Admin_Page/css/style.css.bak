@import url('https://fonts.googleapis.com/css2?family=Kanit:wght@200;300;400;500;600&display=swap');
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Kanit', sans-serif;
}
body{
  background: #EEEEEE;
}
h3{
  font-size: 35px;
  font-weight: 300;
}
/*sidebar*/
.wrapper{
  display: flex;
  position: relative;
  
}
.wrapper .sidebar{
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 250px;
  background: #222831;
}

.wrapper .sidebar h2{
  color: #7BC74D;
  text-transform: uppercase;
  text-align: center;
  margin-bottom: 30px;
  margin-top: 30px;
}
.wrapper .sidebar ul li{
  padding: 15px 30px 15px;
  list-style-type: none;
}

.wrapper .sidebar ul li a{
  color: #EEE;
  display: block;
  text-decoration: none;
}

.wrapper .sidebar ul li .bx{
  width: 25px;
}
.wrapper .sidebar ul li.active a{
  color: #222831;
}
.wrapper .sidebar ul li.active{
  background-color: #fff;
}
.wrapper .sidebar ul li:hover:not(.active){
  background: #fff;
}
.wrapper .sidebar ul li:hover:not(.active) a{
  color: #393E46;
}


.wrapper .sidebar .account{
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  padding-bottom: 30px;
  color: #EEEEEE;
  text-transform: uppercase;
}

.wrapper .main{
  width: 80%;
  margin-left: 200px;
  display: inline-block;  
  flex-wrap: wrap;
}
.wrapper .main .head{
  display: flex;  
  margin-top: 20px;
  margin-left: 90px;
  flex-wrap: wrap;
}
.wrapper .main .btn{
  display: flex;  
  margin-left: 45px;
  flex-wrap: wrap;
}

.wrapper .main .body{
	margin-left: 90px;
  display: block;  
  flex-wrap: wrap;
}
/*table*/

.table {
  border-collapse: collapse;
  margin: 25px 0;
  font-size: 0.9em;
  font-family: sans-serif;
  min-width: 750px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
}
.table thead tr {
  background-color: #393E46;
  color: #ffffff;
  text-align: left;
}
.table th,
.table td {
    padding: 8px 10px;

}
.table tbody tr {
  border-bottom: 1px solid #dddddd;
}

.table tbody tr:nth-of-type(even) {
  background-color: #f3f3f3;
}

.table tbody tr:last-of-type {
  border-bottom: 2px solid #393E46;
}
.table td i{
	text-align: center;
	font-size: 17px;
	color: white;
}
  